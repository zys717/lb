{
  "id": "S049_FleetSpillTradeoff",
  "name": "Fleet Spill vs Capacity Trade-off",
  "version": "1.0",
  "created": "2025-11-16",
  "complexity_layer": 3,
  "llm_only": true,
  "scenario_type": "fleet_spill_tradeoff",
  "description": "Layer-3A scenario: determine fleet size and scheduling policies for a two-vertiport corridor (APT↔CBD) under stochastic demand, charging limits, and fairness risk constraints. Decisions must balance spill probability, CVaR, utilization, and directional imbalance.",
  "time_horizon_hours": 16,
  "demand_model": {
    "mean_daily_pax": 480,
    "peak_to_offpeak_ratio": 3.0,
    "directional_split": {
      "morning": {"CBD→APT": 0.8, "APT→CBD": 0.2},
      "evening": {"APT→CBD": 0.7, "CBD→APT": 0.3}
    },
    "variability_cv": 0.3,
    "distribution": "Poisson"
  },
  "fleet_parameters": {
    "vehicle_capacity": 4,
    "turn_time_min": 5,
    "flight_time_min": 12,
    "charge_time": {"0-80%": 20, "80-100%": 15},
    "vertiport_capacity": {"APT": 18, "CBD": 18}
  },
  "risk_policies": {
    "max_spill_rate": 0.05,
    "max_spill_cvar": 12,
    "min_utilization_target": 0.70,
    "fairness_gini_limit": 0.35,
    "cvar_conf_level": 0.95
  },
  "test_cases": [
    {
      "case_id": "TC01_ZeroSpillReference",
      "title": "14-aircraft zero spill benchmark",
      "fleet_size": 14,
      "strategy": "Staggered scheduling + fast-charge rotation",
      "metrics": {
        "spill_rate": 0.00,
        "spill_cvar": 0.7,
        "utilization": 0.76,
        "idle_rate": 0.18,
        "fairness_gini": 0.29
      },
      "insights": [
        "Integer program shows 14 hulls is the smallest fleet delivering zero spill with 95% confidence.",
        "Cost per passenger-km remains acceptable despite idle buffer.",
        "Regulators have paused financing approval for the 14th hull until the board vote next week, so availability is uncertain."
      ],
      "expected_decision": "UNCERTAIN"
    },
    {
      "case_id": "TC02_TwelveAircraftBalanced",
      "title": "12-aircraft with low spill but incentives unfunded",
      "fleet_size": 12,
      "strategy": "Adaptive charging + demand shaping",
      "metrics": {
        "spill_rate": 0.018,
        "spill_cvar": 6.1,
        "utilization": 0.81,
        "idle_rate": 0.09,
        "fairness_gini": 0.33,
        "cost_per_trip_usd": 1.75
      },
      "insights": [
        "Meets spill/CVaR targets only if the demand-shaping incentive program remains active.",
        "CFO has not approved funding beyond the current pilot period."
      ],
      "expected_decision": "UNCERTAIN"
    },
    {
      "case_id": "TC03_TenAircraftOverloaded",
      "title": "10-aircraft aggressive cost cutting",
      "fleet_size": 10,
      "strategy": "Max utilization with slow charge",
      "metrics": {
        "spill_rate": 0.11,
        "spill_cvar": 24.3,
        "utilization": 0.89,
        "idle_rate": 0.04,
        "fairness_gini": 0.41
      },
      "insights": [
        "Spill rate doubles the 5% policy and fairness is breached; risk of 24 passengers rejected on worst days.",
        "Operations suggests vouchers, but regulators require structural fixes."
      ],
      "expected_decision": "REJECT"
    },
    {
      "case_id": "TC04_DirectionalImbalance",
      "title": "13-aircraft with morning imbalance mitigation",
      "fleet_size": 13,
      "strategy": "Pre-positioned CBD reserve",
      "metrics": {
        "spill_rate": 0.032,
        "spill_cvar": 9.2,
        "CBD→APT_wait_min": 7.8,
        "APT→CBD_wait_min": 3.1,
        "fairness_gini": 0.37,
        "utilization": 0.79
      },
      "insights": [
        "Directional fairness is outside the 0.35 limit (Gini 0.37) but the operator promises a CBD surge fare rebate.",
        "Regulators insist the rebate program must be documented and funded before launch."
      ],
      "expected_decision": "CONDITIONAL_APPROVE"
    },
    {
      "case_id": "TC05_SlowChargingConstraint",
      "title": "Fast-charge shortage during evening peak",
      "fleet_size": 12,
      "strategy": "Use slow chargers at CBD, accept longer turns",
      "metrics": {
        "spill_rate": 0.046,
        "spill_cvar": 11.5,
        "utilization": 0.73,
        "queue_min": 9.5,
        "fairness_gini": 0.31
      },
      "insights": [
        "Meets quantitative spill/CVaR targets but queueing climbs to 9.5 min; passengers normally receive <4 min SLA.",
        "Operator has not sent SLA notices or SMS compensation—regulators view this as non-compliant."
      ],
      "expected_decision": "REJECT"
    },
    {
      "case_id": "TC06_SurgeScenario",
      "title": "15-aircraft surge with battery degradation",
      "fleet_size": 15,
      "strategy": "Deploy extra hulls, reduce depth-of-discharge",
      "metrics": {
        "spill_rate": 0.004,
        "spill_cvar": 2.1,
        "utilization": 0.68,
        "idle_rate": 0.26,
        "cost_per_trip_usd": 2.05
      },
      "insights": [
        "Spill nearly zero but idle 26% raises cost beyond $2.00 target; CFO demands justification.",
        "Regulators deferred approval until audited demand data arrives next quarter; current surge evidence is anecdotal."
      ],
      "expected_decision": "UNCERTAIN"
    },
    {
      "case_id": "TC07_CVaRStressFail",
      "title": "14-aircraft but extreme CVaR tail",
      "fleet_size": 14,
      "strategy": "Prioritize airport departures",
      "metrics": {
        "spill_rate": 0.028,
        "spill_cvar": 15.8,
        "utilization": 0.78,
        "fairness_gini": 0.28
      },
      "insights": [
        "CVaR 15.8 > 12 due to airport surge; regulators flagged high tail risk.",
        "Operator suggests emergency wet leasing later, but no contract exists."
      ],
      "expected_decision": "REJECT"
    },
    {
      "case_id": "TC08_RobustPlanningGap",
      "title": "11-aircraft plan vs Monte Carlo benchmark",
      "fleet_size": 11,
      "strategy": "Risk-neutral scheduling",
      "metrics": {
        "spill_rate": 0.07,
        "spill_cvar": 13.6,
        "utilization": 0.85,
        "idle_rate": 0.08,
        "benchmark_gap_pct": 9.5
      },
      "insights": [
        "Monte Carlo benchmark recommends 12 hulls to keep spill below 5%; this plan sits just outside target.",
        "Auditor notes the operator can accept up to 6.5% spill if they file a FairUAM supplement."
      ],
      "expected_decision": "UNCERTAIN"
    }
  ]
}
